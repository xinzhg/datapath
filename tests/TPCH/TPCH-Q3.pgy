/*

DESCRIPTION(TPC-H Query 3 version 2.14.3)

select
    l_orderkey,
    sum(l_extendedprice*(1-l_discount)) as revenue,
    o_orderdate,
    o_shippriority
from
    customer,
    orders,
    lineitem
where
    c_mktsegment = 'BUILDING'
    and c_custkey = o_custkey
    and l_orderkey = o_orderkey
    and o_orderdate < date '1995-03-15'
    and l_shipdate > date '1995-03-15'
group by
    l_orderkey,
    o_orderdate,
    o_shippriority
order by
    revenue desc,
    o_orderdate
limit 10;

RESULT(
</"2456423"|"406181.0111"|"1995/03/05"|"0"
"3459808"|"405838.6989"|"1995/03/04"|"0"
"492164"|"390324.061"|"1995/02/19"|"0"
"1188320"|"384537.9359"|"1995/03/09"|"0"
"2435712"|"378673.0558"|"1995/02/26"|"0"
"4878020"|"378376.7952"|"1995/03/12"|"0"
"5521732"|"375153.9215"|"1995/03/13"|"0"
"2628192"|"373133.3094"|"1995/02/22"|"0"
"993600"|"371407.4595"|"1995/03/05"|"0"
"2300070"|"367371.1452"|"1995/03/13"|"0"/>)

RESULT_FILE(TPCH-Q3-result.csv)

*/

LOAD customer;
LOAD orders;
LOAD lineitem;

selcust =
FILTER
    customer
BY
    customer.c_mktsegment == 'BUILDING';

selord =
FILTER
    orders
BY
    orders.o_orderdate < '1995/03/15';

selline =
FILTER
    lineitem
BY
    lineitem.l_shipdate > '1995/03/15';

j1 =
JOIN
    selord BY orders.o_custkey,
    selcust BY customer.c_custkey;

j2 =
JOIN
    selline BY lineitem.l_orderkey,
    j1 BY orders.o_orderkey;

gby =
GLA:GroupBy
<
    [
        l_orderkey     : INT     ,
        o_orderdate    : DATE    ,
        o_shippriority : HString
    ],
    GLA:Sum
>
FROM
    j2
USING
    lineitem.l_orderkey,
    orders.o_orderdate,
    orders.o_shippriority,
    lineitem.l_extendedprice * (1- lineitem.l_discount)
AS
    l_orderkey     : INT     ,
    o_orderdate    : DATE    ,
    o_shippriority : HString ,
    revenue        : DOUBLE;

/* DEBUG
PRINT
    gby
USING
    l_orderkey,
    revenue,
    o_orderdate,
    o_shippriority
AS
    l_orderkey     : INT      ,
    revenue        : DOUBLE   ,
    o_orderdate    : DATE     ,
    o_shippriority : HString
INTO
    "Q3-gby.csv";
*/

orderby =
GLA:OrderBy
<
    [
        revenue     : DOUBLE : DESC ,
        o_orderdate : DATE   : ASC
    ],
    [
        l_orderkey     : INT     ,
        o_shippriority : HString
    ]
> (10)
FROM
    gby
USING
    revenue,
    o_orderdate,
    l_orderkey,
    o_shippriority
AS
    ord_revenue        : DOUBLE   ,
    ord_o_orderdate    : DATE     ,
    ord_l_orderkey     : INT      ,
    ord_o_shippriority : HString;

PRINT
    orderby
USING
    ord_l_orderkey,
    ord_revenue,
    ord_o_orderdate,
    ord_o_shippriority
AS
    l_orderkey     : INT      ,
    revenue        : DOUBLE   ,
    o_orderdate    : DATE     ,
    o_shippriority : HString
INTO
    "TPCH-Q3-result.csv";
