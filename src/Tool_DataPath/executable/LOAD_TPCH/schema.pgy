/* Piggy program to create the TPC-H relations

   Creates the probabilistic version
 */

#include "tpch.pgy" // for types

CREATE RELATION customer (
    c_custkey       : INT     ,
    c_name          : VARCHAR ,
    c_address       : VARCHAR ,
    c_nationkey     : INT     ,
    c_phone         : VARCHAR ,
    c_acctbal       : FLOAT   ,
    c_mktsegment    : mktsegment_F,
    c_comment       : VARCHAR
);

CREATE RELATION lineitem (
    l_orderkey      : BIGINT  ,
    l_partkey       : INT     ,
    l_suppkey       : INT     ,
    l_linenumber    : INT     ,
    l_quantity      : FLOAT   ,
    l_extendedprice : FLOAT   ,
    l_discount      : FLOAT   ,
    l_tax           : FLOAT   ,
    l_returnflag    : status_F ,
    l_linestatus    : status_F ,
    l_shipdate      : DATE    ,
    l_commitdate    : DATE    ,
    l_receiptdate   : DATE    ,
    l_shipinstruct  : status_F ,
    l_shipmode      : status_F ,
    l_comment       : VARCHAR
);

CREATE RELATION nation (
    n_nationkey     : INT     ,
    n_name          : nation_F ,
    n_regionkey     : INT     ,
    n_comment       : VARCHAR
);

CREATE RELATION orders (
    o_orderkey      : BIGINT  ,
    o_custkey       : INT     ,
    o_orderstatus   : status_F ,
    o_totalprice    : FLOAT   ,
    o_orderdate     : DATE    ,
    o_orderpriority : status_F ,
    o_clerk         : VARCHAR ,
    o_shippriority  : status_F ,
    o_comment       : VARCHAR
);

CREATE RELATION part (
    p_partkey       : INT     ,
    p_name          : VARCHAR ,
    p_mfgr          : manufacturer_F ,
    p_brand         : partbrand_F ,
    p_type          : parttype_F ,
    p_size          : INT     ,
    p_container     : partcontainer_F ,
    p_retailprice   : FLOAT   ,
    p_comment       : VARCHAR
);

CREATE RELATION partsupp (
    ps_partkey      : INT     ,
    ps_suppkey      : INT     ,
    ps_availqty     : FLOAT   ,
    ps_supplycost   : FLOAT   ,
    ps_comment      : VARCHAR
);

CREATE RELATION region (
    r_regionkey     : INT     ,
    r_name          : region_F ,
    r_comment       : VARCHAR
);

CREATE RELATION supplier (
    s_suppkey       : INT     ,
    s_name          : VARCHAR ,
    s_address       : VARCHAR ,
    s_nationkey     : INT     ,
    s_phone         : VARCHAR ,
    s_acctbal       : FLOAT   ,
    s_comment       : VARCHAR
);

FLUSH;

QUIT;
